{
    "name": "narration/narration",
    "description": "The Narration Framework.",
    "keywords": [
        "narration",
        "php",
        "framework"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Nuno Maduro",
            "email": "enunomaduro@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2",
        "ext-pdo": "*",
        "narration/console": "dev-master",
        "narration/container": "dev-master",
        "narration/http": "dev-master",
        "neat/object": "^0.9.2"
    },
    "require-dev": {
        "narration/testing": "dev-master"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Application\\": "src/Application",
            "Domain\\": "src/Domain",
            "Infrastructure\\": "src/Infrastructure"
        }
    },
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
